<article>
  <h2 class="title mt-5">Add Daily Notes: </h2><hr>
  <form class="add-daily-form">
    <div>
      <label for="date">Date:</label>
      <input type="date" id="date" name="date" value="{{daily.date_created}}"/>
    </div>
    <div>
      <label for="places-visited">Where did you go today?</label>
      <input class="input" name="places-visited" type="textarea" value="{{daily.places_visited}}" />
    </div>
    <div>
      <label for="daily-notes">Notes from the day:</label>
      <input type="textarea" id="daily-notes" name="daily-notes" value="{{daily.daily_notes}}"/>
    </div>
    <div id="daily-btns">
        <button type="submit" class="button is-link is-pulled-right" name="submit" id="submit">Submit</button>
        <button class="button is-link is-pulled-right" id="cancel">Cancel</button>
    </div>
  </form>
</article>

<script src="/js/daily.js"></script>