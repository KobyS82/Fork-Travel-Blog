  <div id="trip-info">
    <h2>{{trip.title}}</h2>
    <h3>{{trip.location}}</h3>
    <p>{{trip.trip_description}}</p>
    <p>{{trip.starting-date}} - {{trip.ending_date}}</p>
</div>
<div id="daily-info">

{{#each dailies as |daily|}}
    {{> daily-info daily}}
  	{{/each}}
{{!-- {{else}} --}}
    <h4 class="pb-4 has-text-centered is-italic">There is currently no daily notes for this trip. Click below to add daily notes.</h4>
    <a href="/api/trip-details/{{trip.id}}/add-daily"><button id="-add-daily-btn" class="button is-warning is-pulled-right">add daily notes</button></a>
{{!-- {{/if}} --}}
</div>

<script src="/js/add-daily.js"></script>